<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_article_padding"
    android:layout_marginLeft="@dimen/cardview_article_padding"
    android:layout_marginRight="@dimen/cardview_article_padding"
    android:layout_marginTop="@dimen/cardview_article_padding"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="@integer/article_title_max_lines"
            android:paddingBottom="@dimen/article_bottom_padding"
            android:paddingLeft="@dimen/article_general_padding"
            android:paddingRight="@dimen/article_general_padding"
            android:paddingTop="@dimen/article_general_padding"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="@integer/article_title_max_lines"
            android:paddingBottom="@dimen/article_general_padding"
            android:paddingLeft="@dimen/article_general_padding"
            android:paddingRight="@dimen/article_general_padding"
            android:textColor="@color/secondary_text" />
    </LinearLayout>

</android.support.v7.widget.CardView>
